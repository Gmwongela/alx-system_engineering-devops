#!/bin/bash

# Update the package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Define the custom header value
CUSTOM_HEADER="X-Served-By: $(hostname)"

# Configure Nginx to add the custom header
echo "add_header $CUSTOM_HEADER;" | sudo tee /etc/nginx/conf.d/custom_response_header.conf

# Test Nginx configuration and reload it
sudo nginx -t && sudo systemctl reload nginx
