#!/bin/bash

# Check if Nginx is installed
if ! command -v nginx &>/dev/null; then
    echo "Nginx is not installed. Please install Nginx first."
    exit 1
fi

# Create a custom 404 error page with the required content
echo "Ceci n'est pas une page" > /usr/share/nginx/html/custom_404.html

# Create a new Nginx configuration file for the custom 404 page
echo "server {
    listen 80 default_server;
    server_name _;
    error_page 404 /custom_404.html;
    location = /custom_404.html {
        root /usr/share/nginx/html;
        internal;
    }
}" > /etc/nginx/sites-available/custom_404

# Create a symbolic link to enable the configuration
ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test Nginx configuration for syntax errors
if ! nginx -t; then
    echo "Nginx configuration test failed. Please check the configuration files."
    exit 1
fi

# Reload Nginx to apply the new configuration
systemctl reload nginx

# Script execution completed successfully
echo "Nginx custom 404 page configuration completed successfully."
